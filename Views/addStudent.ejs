<head>
    <a href="/">Home</a>
    <h1>Add Students</h1>
    <!-- message displayed if there is an error -->
        <% if(errorMessage.length > 0)
        { %>
            <% errorMessage.forEach(function(error) { %>
            <li><%= error %></li>
            <% }) %>
        <% } %>
</head>

<body>
    <!--Form to add new student information-->
    <form action="/students/add" method="POST">
        <label for="sid">Student ID</label>
        <input type="text" id="sid" name="sid" value="<%= studentInfo.sid %>" required><br>

        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="<%= studentInfo.name %>" required><br>

        <label for="age">Age</label>
        <input type="number" id="age" name="age" value="<%= studentInfo.age %>" required><br>

        <button type="submit">Add</button>
      </form>
</body>